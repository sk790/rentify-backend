{
  "compilerOptions": {
    "target": "ES6", // Use ES6 or later
    "module": "ESNext", // Use ES module syntax
    "moduleResolution": "node", // Use Node-style resolution for modules
    "outDir": "./dist", // Output directory for compiled files
    "esModuleInterop": true, // Enables default import from CommonJS modules
    "skipLibCheck": true, // Skip type checking of declaration files
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*.ts"], // Include source files
  "exclude": ["node_modules"] // Exclude node_modules from compilation
}
